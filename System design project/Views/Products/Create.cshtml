@model System_design_project.Models.Products
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
  
    <h2>Add New Product</h2>

    <form style="margin-top: 100px;" asp-action="Create" method="post">
        <div>
            <label asp-for="ProductName"></label>
            <input class="w-100 form-control border-0 py-3 mb-4" asp-for="ProductName" type="text" />
            <span asp-validation-for="ProductName" ></span>
        </div>
        <div>
            <label asp-for="ProductDescription"></label>
            <input class="w-100 form-control border-0 py-3 mb-4" asp-for="ProductDescription" type="text" />
            <span asp-validation-for="ProductDescription"></span>
        </div>
        <div>
            <label asp-for="Price"></label>
            <input class="w-100 form-control border-0 py-3 mb-4" asp-for="Price" type="number" step="0.01" />
            <span asp-validation-for="Price"></span>
        </div>
        <div>
            <label asp-for="Quantity"></label>
            <input class="w-100 form-control border-0 py-3 mb-4" asp-for="Quantity" type="number" />
            <span asp-validation-for="Quantity"></span>
        </div>
        <button class="w-100 btn form-control border-secondary py-3 bg-white text-primary" type="submit">Add Product</button>
    </form>


}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}